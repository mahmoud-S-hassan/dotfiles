 #taskbar {
    background: @primary;
    margin: 3px 15px 3px 0px;
    padding:3px;
    border-radius: 5px 5px 5px 5px;
    /* font-weight: normal; */
    /* font-style: normal; */
    opacity:1.0;
    /* border: 0.1px solid @border_color; */
}

#taskbar button.active {
    /* background: @wb-act-bg; */
    background: #3e3d3d;
    /* color: @wb-act-color; */
    color: #9d3232;
    margin-left: 0.3em;
    padding-left: 0.8em;
    padding-right: 0.8em;
    margin-right: 0.3em;
    animation: tb_active 20s ease-in-out 1;
    transition: all 0.4s cubic-bezier(.55, -0.68, .48, 1.682);
}

#taskbar button {
    margin:0;
    border-radius: 5px 5px 5px 5px;
    padding: 0px 5px 0.px 5px;
}

#taskbar.empty {
    background:transparent;
    border:0;
    padding:0;
    margin:0;
}